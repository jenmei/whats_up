<h1>Listing alerts</h1>

<% form_for :alert, :url => { :action => 'refresh' } do |f| %>
  <%= f.submit :value => 'Refresh' %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Summary</th>
  </tr>

<% @alerts.each do |alert| %>
  <tr>
    <td><%= alert.title %></td>
    <td><%= alert.date %></td>
    <td><%= alert.summary %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Alert', new_alert_path %>
